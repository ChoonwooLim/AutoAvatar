{
  "name": "autoavatar-desktop",
  "version": "1.0.0",
  "description": "AutoAvatar AI Video Generator - Desktop Application",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build": "electron-builder",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "dev": "concurrently \"python -m streamlit run app.py --server.port 8501 --server.headless true\" \"wait-on http://localhost:8501 && electron .\"",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.autoavatar.desktop",
    "productName": "AutoAvatar",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "app.py",
      "config.py",
      "video_generator.py",
      "utils/**/*",
      "requirements.txt",
      "!node_modules",
      "!dist",
      "!.git"
    ],
    "extraResources": [
      {
        "from": "python-portable",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico",
      "publisherName": "AutoAvatar Team",
      "fileAssociation": [
        {
          "ext": "mp4",
          "name": "Video File",
          "description": "Video File"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/icon.png",
      "category": "Video"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AutoAvatar"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "find-free-port": "^2.0.0"
  },
  "author": "AutoAvatar Team",
  "license": "MIT"
} 